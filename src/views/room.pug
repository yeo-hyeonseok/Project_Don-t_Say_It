extends layout.pug

block content
    div#room_container
        header.room_header 
            span.exit_button 
                i.fa-solid.fa-chevron-left
            div.word_container 
                p 상대방의 금칙어
                span.forbidden_word
            span.timer 2:00
        div.chat_list        
            p.loading_msg 상대방을 기다리는 중입니다...
            //p.notice ⚠️ 불쾌감을 줄 수 있는 비속어나 욕설은 삼가주세요.
